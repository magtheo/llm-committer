{
  "name": "llm-committer",
  "displayName": "LLM-Committer",
  "description": "VSCode extention for generating commit messages using an LLM",
  "version": "0.0.1",
  "publisher": "theo-dev",
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": ["onCommand:llm-committer.openWebview"],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "npm run build:webview && npm run build:extension",
    "build:webview": "vite build",
    "build:extension": "tsc -p tsconfig.json",
    "dev": "concurrently \"vite build --watch\" \"tsc -watch -p ./\"",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "contributes": {
    "commands": [
      {
        "command": "llm-committer.openWebview",
        "title": "Open React Webview"
      }
    ]
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vitejs/plugin-react": "^4.4.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "concurrently": "^9.1.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
